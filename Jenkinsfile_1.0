pipeline {
    agent any
    
    tools {
        maven 'local_maven'
    }
stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Archiving the artifacts'
                    archiveArtifacts artifacts: 'web.tar', fingerprint: true
                }
            }
        }

        stage ('Deployments'){
            parallel{
                stage ("Deploy to Staging"){
                    steps {
                        copyArtifacts filter: 'web.tar', fingerprintArtifacts: true, projectName: env.JOB_NAME , selector: lastSuccessful(), target: '/opt/tomcat/webapps/'
                    }
                }
            }
        }
    }
}
